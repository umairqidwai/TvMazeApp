<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.fragments.TvShowDetailFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/tv_show_detail_image_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/small_50" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_show_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/small_50"
                android:textSize="@dimen/text_size_medium" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_show_language"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/small_50"
                android:textSize="@dimen/text_size_medium" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_show_genres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/small_50"
                android:textSize="@dimen/text_size_medium" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_show_rating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/small_50"
                android:textSize="@dimen/text_size_medium" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</FrameLayout>